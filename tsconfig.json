{
	"compilerOptions": {
		"experimentalDecorators": true,
		"paths": {
			"*": ["types/*"]
		},
		"baseUrl": ".",
		"outDir": "build/dist",
		"module": "commonjs",
		"target": "es6",
		"lib": [
			"dom",
			// "es2015",
			"es5",
			// "es2015.proxy",
			// "webworker",
			"scripthost"
		],
		"sourceMap": true,
		"jsx": "react",
		"moduleResolution": "node",
		"types": ["node"],
		"downlevelIteration": true,
		"rootDir": "./",
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"importHelpers": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noUnusedLocals": true, 
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts",
		"webpack.prod.config.js",
		"public",
		"config-overrides.js"
	]
}
